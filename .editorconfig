# EditorConfig helps keep consistent coding styles across editors/IDEs
root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown: keep trailing spaces (for hard line breaks)
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# YAML / YML (workflows, OpenAPI, metadata)
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Gradle/Kotlin (in case we add any build logic here)
[*.{gradle,kts}]
indent_style = space
indent_size = 2

# JavaScript / TypeScript (if we test Node tooling locally)
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# Makefile must use tabs
[Makefile]
indent_style = tab
